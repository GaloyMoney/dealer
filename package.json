{
  "name": "dealer",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:GaloyMoney/dealer.git",
  "author": "Sebastien Verreault <sebver@pm.me>",
  "license": "MIT",
  "scripts": {
    "tsc-check": "tsc --noEmit --skipLibCheck",
    "eslint-check": "eslint \"src/**/*.ts\"",
    "eslint-fix": "eslint \"src/**/*.ts\" --fix",
    "prettier-check": "prettier --check .",
    "prettier-write": "prettier --write .",
    "build": "tsc -p tsconfig-build.json --skipLibCheck",
    "test:unit": "jest --config ./test/jest-unit.config.js --bail --verbose $TEST | yarn pino-pretty -c -l",
    "test:integration": "jest --config ./test/jest-integration.config.js --bail --verbose $TEST | yarn pino-pretty -c -l",
    "servers:graphql:pretty": "yarn build && node lib/servers/graphql/WalletGraphqlServer.js | pino-pretty -c -l",
    "servers:graphql:elk": "yarn build && node lib/servers/graphql/WalletGraphqlServer.js | pino-elasticsearch -u elastic -p changeme",
    "servers:exporter:pretty": "yarn build && node lib/servers/exporter/exporter.js | pino-pretty -c -l",
    "servers:exporter:elk": "yarn build && node lib/servers/exporter/exporter.js | pino-elasticsearch -u elastic -p changeme",
    "app:dealer": "yarn build && node lib/app/dealer.js | pino-elasticsearch -u elastic -p changeme"
  },
  "dependencies": {
    "@apollo/client": "^3.3.21",
    "@profusion/apollo-validation-directives": "^2.1.5",
    "apollo-server-errors": "^2.5.0",
    "apollo-server-express": "^2.25.2",
    "ccxt": "^1.53.54",
    "dateformat": "^4.5.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "graphql": "^15.5.1",
    "graphql-middleware": "^6.1.3",
    "graphql-tools": "^8.1.0",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "node-fetch": "^2.6.1",
    "pino": "^7.0.0-rc.1",
    "pino-http": "^5.6.0",
    "prom-client": "^13.2.0",
    "typescript": "^4.3.5",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@jest/test-sequencer": "^27.0.6",
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.171",
    "@types/node": "^16.4.1",
    "@types/pino": "^6.3.9",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "jest": "^27.0.6",
    "jest-junit": "^12.2.0",
    "pino-elasticsearch": "^6.1.0",
    "pino-pretty": "^5.1.2",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.1.0",
    "tsc": "^2.0.3"
  }
}
